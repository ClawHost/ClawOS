{
  "env": {
    "vars": {}
  },

  "gateway": {
    "mode": "local",
    "port": 18789,
    "bind": "lan",
    "auth": {
      "mode": "token",
      "token": "${OPENCLAW_GATEWAY_TOKEN}"
    },
    "controlUi": {
      "enabled": true,
      "allowInsecureAuth": true,
      "allowedOrigins": ["*"]
    },
    "tls": {
      "enabled": false
    }
  },

  "auth": {
    "profiles": {},
    "order": {}
  },

  "models": {},

  "agents": {
    "defaults": {
      "workspace": "/home/node/.openclaw/workspace",
      "model": {
        "primary": "anthropic/claude-sonnet-4-5"
      },
      "compaction": {
        "mode": "safeguard"
      },
      "maxConcurrent": 3,
      "timeoutSeconds": 600,
      "contextTokens": 200000,
      "sandbox": {
        "mode": "non-main",
        "scope": "agent",
        "workspaceAccess": "rw",
        "docker": {
          "network": "none",
          "readOnlyRoot": true,
          "capDrop": ["ALL"],
          "pidsLimit": 256,
          "memory": "512m"
        }
      }
    }
  },

  "tools": {
    "profile": "full",
    "elevated": {
      "enabled": false
    },
    "media": {
      "audio": {
        "enabled": true,
        "language": "auto",
        "timeoutSeconds": 120,
        "models": [
          {
            "type": "cli",
            "command": "whisper-cli",
            "args": [
              "--model",
              "/opt/clawos/models/whisper/ggml-base.bin",
              "--language",
              "auto",
              "--threads",
              "4",
              "--output-txt",
              "--file",
              "{file}"
            ],
            "language": "auto",
            "timeoutSeconds": 120
          }
        ]
      }
    }
  },

  "skills": {
    "entries": {
      "qmd": {
        "enabled": true,
        "env": {
          "XDG_CACHE_HOME": "/home/node/.cache"
        },
        "config": {
          "defaultCollection": "workspace",
          "searchMode": "search"
        }
      }
    }
  },

  "messages": {
    "ackReactionScope": "group-mentions",
    "tts": {
      "auto": "inbound",
      "provider": "edge",
      "edge": {
        "enabled": true,
        "voice": "en-US-AriaNeural"
      }
    }
  },

  "logging": {
    "level": "info",
    "consoleLevel": "info",
    "redactSensitive": "tools"
  }
}
